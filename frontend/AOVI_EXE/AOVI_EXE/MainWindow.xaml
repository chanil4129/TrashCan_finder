<Window x:Class="AOVI_EXE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AOVI_EXE"
        mc:Ignorable="d"
        Height="1080" Width="1920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{x:Null}"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Viewbox x:Name="LayoutRoot" Stretch="Fill">
        <Grid Width="1920" Height="1080" Background="{x:Null}">
            <ContentControl x:Name="ModelPage" Content="{Binding CurrentViewModel}"/>
        </Grid>
    </Viewbox>
</Window>
